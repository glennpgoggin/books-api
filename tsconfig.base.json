{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@server/domain/books": ["libs/server/domain/books/src/index.ts"],
      "@server/support/database": ["libs/server/support/database/src/index.ts"],
      "@server/support/errors": ["libs/server/support/errors/src/index.ts"],
      "@shared/support/interfaces": [
        "libs/shared/support/interfaces/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
